{
  "version": 2,
  "name": "republic-of-stackshirts",
  "public": true,
  "build": {
    "env": {
      "NPM_TOKEN": "@npm-token",
      "NODE_ENV": "production"
    }
  },
  "builds": [
    {
      "src": "db/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "api/(?<type>[^\\/]+)/(?<id>\\d[^\\/]+)",
      "dest": "db/$type/$id/$id.json"
    },
    {
      "src": "api/(?<type>[^\\/]+)/(?<id>(?<letter>[^\\/])[^\\/]+)",
      "dest": "db/$type/$letter/$id/$id.json"
    }
  ]
}
